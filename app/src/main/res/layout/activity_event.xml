<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/type_icon_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Icon identifying fishing type"
                android:src="@drawable/ic_proposition_musicarenje" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/type_icon_iv"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_tv"
                    android:text="Dubinka u Dolovu"
                    style="@style/event_details_title"/>

                <TextView
                    android:id="@+id/date_tv"
                    style="@style/event_details_date"
                    android:text="23/08/2015" />

                <TextView
                    android:id="@+id/location_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pancevo" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/event_details_label"
            android:text="Description:"/>
        <TextView
            android:id="@+id/description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas sollicitudin aliquam purus nec porta. Maecenas at pulvinar eros. Morbi a tincidunt turpis, et imperdiet justo. Proin id magna volutpat, vulputate nibh et, fermentum purus. Quisque in aliquet ante. In hac habitasse platea dictumst. In hac habitasse platea dictumst. Sed bibendum erat eget magna eleifend, quis interdum lectus consectetur. Pellentesque ultricies ornare dui, sit amet fringilla elit ultricies non. Morbi eros leo, euismod vel venenatis eu, lacinia in nisi. " />

        <View style="@style/event_details_separator_line"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/event_details_label"
            android:text="Comments:" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>